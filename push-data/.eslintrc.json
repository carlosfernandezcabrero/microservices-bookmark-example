{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "no-multi-spaces": ["error", { "exceptions": { "VariableDeclarator": true } }],
        "semi": ["error", "never"],
        "key-spacing": ["error", { "align": "colon" }],
        "no-console": ["error", { "allow": ["info", "warn", "error"] }] 
    }
}
